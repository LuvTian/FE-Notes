{
    "workbench.colorTheme": "Monokai",
    "editor.fontFamily": "Monaco,Consolas",
    // ctrl多选
    "editor.multiCursorModifier": "ctrlCmd",
    // 打开vscode的时候不要显示欢迎界面
    "workbench.startupEditor": "none",
    // 设置隐藏文件或文件夹
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true
    },
    // ctrl+n 新建的文件的默认语言
    "files.defaultLanguage": "html",
    // 配置语言的文件关联
    "files.associations": {
        "*.wxml": "html",
        "*.wxss": "css"
    },
    // 使用cmder为默认终端
    // "terminal.integrated.shell.windows": "cmd.exe",//win7可省略，win10不能
    // "terminal.integrated.env.windows": {"CMDER_ROOT": "D:\\Dev\\cmder"},//win10 win7可省略
    "terminal.integrated.shellArgs.windows": [
        "/k D:\\Dev\\cmder\\vendor\\init.bat"
    ],
    // macOS修改默认shell为zsh
    // "terminal.integrated.shell.osx": "/bin/zsh",

    // 使用TAB键补全emmet
    "emmet.triggerExpansionOnTab": true,
    // 根据文件类型自动设置tabsize
    "editor.detectIndentation": false,
    // 关闭js检查
    "javascript.validate.enable": false,
    // 每次保存的时候自动格式化
    // "editor.formatOnSave": true,
    // 关闭vetur插件的语法报错
    // "vetur.validation.template": false,
    // 修改vetur插件的默认html格式化方式
    // "vetur.format.defaultFormatter.html": "js-beautify-html",
    "vetur.format.defaultFormatterOptions": {
        "js-beautify-html": {
            "wrap_attributes": "force" // 可以换成上面任意一种value
        }
    },
    "vetur.format.defaultFormatter.js": "vscode-typescript",
    "vetur.format.options.tabSize": 4,

    "files.autoSave": "off",
    "eslint.autoFixOnSave": true,
    "eslint.trace.server": "messages",
    // 检查的文件类型
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "html",
        "vue",
        {
            "language": "html",
            "autoFix": true
        },
        {
            "language": "vue",
            "autoFix": true
        }
    ],
    // 以下为stylus格式化配置
    "stylusSupremacy.insertColons": false, // 是否插入冒号
    "stylusSupremacy.insertSemicolons": false, // 是否插入分好
    "stylusSupremacy.insertBraces": false, // 是否插入大括号
    "stylusSupremacy.insertNewLineAroundBlocks": false // 两个选择器中是否换行
}